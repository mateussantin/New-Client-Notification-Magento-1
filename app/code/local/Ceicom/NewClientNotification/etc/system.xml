<?xml version="1.0"?>
<config>
    <tabs>
        <ceicom module="newclientnotification">
            <label>Ceicom</label>
            <sort_order>1</sort_order>
        </ceicom>
    </tabs>
    <sections>
        <newclientnotification module="newclientnotification">
            <label>Notificar Novo Cliente</label>
            <tab>ceicom</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>Configurações</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
                        <div>
                            <strong>Notificar Novo Cliente</strong> Versão: 1.0<br />
                            <hr /><br />
                            Este módulo foi desenvolvido por <a href="https://github.com/mateussantin" target="_blank">Mateus Santin Jr</a><br />
                            Ceicom: <a href="//www.ceicom.com.br/" target="_blank">www.ceicom.com.br</a><br />
                            <br /><br /><hr />
                        </div>
                        ]]>
                    </comment>
                    <fields>
                        <enabled>
                            <label>Habilitar</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <email translate="label">
                            <label>E-mail destinatário</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informe o e-mail destinatário</comment>
                        </email>
                        <email_name translate="label">
                            <label>Nome do remetente</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informe o nome do remetente</comment>
                        </email_name>
                        <email_subject translate="label">
                            <label>Assunto</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informe o assunto do e-mail</comment>
                        </email_subject>
                    </fields>
                </config>
            </groups>
        </newclientnotification>
    </sections>
</config>